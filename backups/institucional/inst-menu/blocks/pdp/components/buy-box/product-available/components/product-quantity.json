{
  "flex-layout.row#product-quantity": {
    "title": "Container Seletor Quantidade",

    "props": {
      "blockClass": "container__product-quantity",
      "preventHorizontalStretch": true,
      "preserveLayoutOnMobile": true,
      "fullWidth": true
    },
    "children": [
      "product-quantity"
    ]
  },

  "product-quantity": {
    "props": {
      "warningQuantityThreshold": 10,
      "showUnit": true,
      "showLabel": false,
      "selectorType": "stepper",
      "quantitySelectorStep": "unitMultiplier"
    }
  }
}
