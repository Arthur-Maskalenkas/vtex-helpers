    "PriorityConfigContainerRef": {
      "title": "Configurar Sistema De Prioridade",
      "minItems": 1,
      "type": "array",
      "maxItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "_": {
            "title": "",
            "type": "string",
            "default": "Priridade por Campo",
            "description": "Atenção: Caso seja selecionado a opção 'Priridade por Campo'  a prioridade será definida pelo campo 'Prioridade' presente na vinculação, e quanto mais alto o número, mais prioridade a vinculação terá. Vinculações que possuirem o mesmo número de prioridade (não existe um limite para isso) serão ordenadas pela ordenagem da lista de vinculações.",
            "disabled": true
          },

          "_2": {
            "title": "",
            "type": "string",
            "default": "Prioridade Por Ordem Da Lista",
            "description": "Atenção: Caso seja selecionada a opção 'Prioridade Por Ordem Da Lista' a prioridade será definida pela ordenagem da lista de vinculações e quanto mais no topo da lista a vinculação estiver, mais prioridade ela terá. Sempre que uma vinculação for criada, ela será adicionada no final da lista e poderá ser arrasta para cima ou para baixo para alterar a prioridade.",
            "disabled": true
          },

          "prioritySystemOnQuadrant": {
            "title": "Qual será a configuração utilizada para definir a prioridade das vinculações?",
            "type": "string",
            "enum": [
              "priorityByList",
              "priorityByField"
            ],
            "enumNames": [
              "Prioridade Por Ordem Da Lista",
              "Priridade por Campo"
            ],

            "default": "20",
            "ui:widget": "select"
          },

          "isInverted": {
            "title": "Inverter Ordem Da Comparação",
            "type": "boolean",
            "default": false

          }
        }
      }
    },

    "PositioningContainerBottomRef": {
      "title": "Configurar Posicionamento",
      "minItems": 1,
      "type": "array",
      "maxItems": 1,
      "items": {
        "type": "object",
        "properties": {

          "positionFlow": {
            "title": "Posicionamento Do Fluxo",
            "description": "O Conteúdo será posicionado em qual sentido?",
            "type": "string",
            "enum": [
              "leftToRight",
              "rightToLeft",
              "center"
            ],
            "enumNames": [
              "Esquerda para Direita",
              "Direita para Esquerda",
              "Centro"
            ],
            "widget": {
              "ui:widget": "select"
            }
          },

          "horizontalDistance": {
            "title": "Distância Horizontal",
            "type": "string",
            "enum": [
              "0px",
              "5px",
              "10px",
              "15px",
              "20px",
              "25px",
              "30px"
            ],
            "enumNames": [
              "Não Aplicar",
              "5",
              "10",
              "15",
              "20",
              "25",
              "30"
            ],
            "default": "0px",
            "ui:widget": "select"
          },

          "verticalDistance": {
            "title": "Distância Vertical",
            "type": "string",
            "enum": [
              "0px",
              "5px",
              "10px",
              "15px",
              "20px",
              "25px",
              "30px"
            ],
            "enumNames": [
              "Não Aplicar",
              "5",
              "10",
              "15",
              "20",
              "25",
              "30"
            ],
            "default": "0px",
            "ui:widget": "select"
          }
        }
      }
    },

    "PositioningContainerRef": {
      "title": "Configurar Posicionamento",
