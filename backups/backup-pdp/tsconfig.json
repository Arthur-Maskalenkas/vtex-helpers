{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "allowUnreachableCode": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "lib": [
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017"
  },
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts"
  ],
  "exclude": [
    "tests"
  ]
}