{
  "name": "custom-apps",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
    "lint:locales": "intl-equalizer",
    "test": "cd ./react && yarn test",
    "test:watch": "ts-mocha -p tsconfig-tests.json  --require ./test-setup.ts test/**/*.spec.ts -w --watch-files 'test/**/*.ts' --watch-files 'react/services/**/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,graphql,gql}": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "messages/*.json": [
      "yarn lint:locales"
    ]
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/chai": "^4.3.5",
    "@types/faker": "^6.6.9",
    "@types/jsdom": "^21.1.1",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.15",
    "@vtex/danger": "^0.2.7",
    "@vtex/intl-equalizer": "^2.5.0",
    "@vtex/prettier-config": "0.1.4",
    "chai": "^4.3.7",
    "chai-fetch": "^0.3.1",
    "eslint": "7.12.1",
    "eslint-config-vtex": "12.3.2",
    "eslint-config-vtex-react": "^6.8.3",
    "husky": "4.2.3",
    "jsdom": "^22.1.0",
    "lint-staged": "10.1.1",
    "mocha": "^10.2.0",
    "node-fetch": "^3.3.1",
    "prettier": "2.0.2",
    "sinon": "^15.1.2",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "3.8.3"
  },
  "version": "0.0.0",
  "intl-equalizer": {
    "referenceLocale": "en",
    "localeDirectory": "messages"
  },
  "dependencies": {
    "axios": "^1.3.5"
  }
}